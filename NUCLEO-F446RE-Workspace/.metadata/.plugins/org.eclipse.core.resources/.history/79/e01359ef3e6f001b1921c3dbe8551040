/*
*   @file:  source file for UART 
*/
/********************************************************************
 * INCLUDES
 */
#include "stdio.h"
#include "string.h"
#include "stm32f4xx_hal_uart.h"

/********************************************************************
 * Local Variables
 */

UART_HandleTypeDef *UartHandle;

/********************************************************************
 * EXPORT FUNCTIONS
 */
void initUART(UART_HandleTypeDef *pUART)
{
	UartHandle = pUART;
}

void printString(char* string)
{
    int length = strlen(string);

    char buffer[length];

    strcpy(buffer, string);

    HAL_UART_Transmit(UartHandle, (uint8_t*)buffer, length, 100);
}
